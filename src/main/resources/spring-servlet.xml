<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">


       <!--设置映射-->
       <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
           <!--定义拦截器-->
              <property name="interceptors">
                     <list>
                            <ref bean="NotLeaveWord"/>
                     </list>
              </property>

              <property name="mappings">
                 <props>
                        <prop key="helloWord">helloWordController</prop>
                        <prop key="FormController">formController</prop>
                        <prop key="formMultiController">formMuliController</prop>
                        <prop key="loginController">LoginController</prop>
                 </props>
           </property>
              
       </bean>
       <!--定义视图-->
       <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
              <!--Jsp/Servlet视图-->
              <property name="viewClass">
                     <value>org.springframework.web.servlet.view.JstlView</value>
              </property>
              <!--jsp存放的目录-->
              <property name="prefix">
                     <value>/WEB-INF/</value>
              </property>
              <!--jsp文件后缀-->
              <property name="suffix">
                     <value>.jsp</value>
              </property>
       </bean>
       <!--异常的页面处理-->
       <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
              <property name="exceptionMappings">
                     <props>
                            <prop key="java.lang.Exception">outException</prop>
                            <prop key="java.lang.Throwable">outException</prop>

                     </props>
              </property>

       </bean>





       <!--定义Controller-->
       <bean id="helloWordController" class="com.lyl.controller.HelloWorldController">
              <property name="helloWorld">
                     <value>HelloWorld</value>
              </property>
              <property name="viewPage">
                     <value>index</value>
              </property>
       </bean>
       <bean id="formController" class="com.lyl.controller.FormController">
              <property name="commandClass">
                     <value>com.lyl.vo.HelloWorld</value>
              </property>
              <property name="viewPage">
                     <value>formShow</value>
              </property>
       </bean>
       <bean id="formMuliController" class="com.lyl.controller.FormMutiController">
              <property name="methodNameResolver">
                     <ref bean="pareMethodResolver"/>
              </property>
              <property name="viewPage">
                     <value>formShow</value>
              </property>
       </bean>


      <bean id="LoginController" class="com.lyl.controller.LoginController">
             <property name="methodNameResolver">
                    <ref bean="pareMethodResolver"/>
             </property>
      </bean>
       <bean id="pareMethodResolver" class="org.springframework.web.servlet.mvc.multiaction.ParameterMethodNameResolver">
              <property name="paramName">
                     <value>method</value>
              </property>

       </bean>
       <bean id="NotLeaveWord" class="com.lyl.interceptor.NotLeaveWord"/>



</beans>